# FLRTS-BMAD Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Required: Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Required: OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Required: Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_VECTORIZE_INDEX=your_vectorize_index_name
CLOUDFLARE_KV_NAMESPACE_ID=your_kv_namespace_id

# Cloudflare Service Configuration
USE_CLOUDFLARE_VECTORIZE=true
USE_CLOUDFLARE_CACHE=true

# Required: Supabase Database
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# Required: Authorization Configuration
# JSON arrays of authorized usernames and user IDs
AUTHORIZED_USERNAMES='["your_telegram_username"]'
AUTHORIZED_USER_IDS='[your_telegram_user_id]'

# Production Performance Settings
SUPABASE_POOL_SIZE=10
SUPABASE_MAX_OVERFLOW=5
SUPABASE_POOL_TIMEOUT=30
SUPABASE_POOL_RECYCLE=3600

REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=30
REDIS_MAX_CONNECTIONS=20

# Vector Store Settings
VECTOR_CACHE_TTL=300
VECTOR_CACHE_ENABLED=true
VECTOR_TOP_K=5

# Optional: GPT Model Configuration
GPT_MODEL=gpt-4o
MAX_TOKENS=2000
TEMPERATURE=0.7

# Optional: Vector Database Configuration
VECTOR_NAMESPACE=production
MIGRATION_FOLDER=migrations

# Optional: Neo4j Graph Memory (if using graph features)
# NEO4J_URL=bolt://localhost:7687
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=your_neo4j_password

# Optional: mem0 Configuration
# MEM0_LLM_MODEL=gpt-4o-mini
# MEM0_MEMORY_THRESHOLD=0.7
# MEM0_WEBHOOK_URL=https://your-webhook-endpoint.com/mem0
# MEM0_WEBHOOK_TOKEN=your_webhook_secret