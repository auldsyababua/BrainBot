#!/bin/bash
#
# Auto-update DEVLOG.md after each commit
# This hook runs automatically after git commit
#
# To install: 
# git config core.hooksPath .githooks
#

echo "ğŸ”„ Updating DEVLOG.md..."
python scripts/update-devlog.py

# Auto-commit the updated DEVLOG.md
if git diff --quiet DEVLOG.md; then
    echo "ğŸ“„ DEVLOG.md already up to date"
else
    echo "ğŸ“ Committing updated DEVLOG.md"
    git add DEVLOG.md
    git commit -m "docs: auto-update DEVLOG.md [skip ci]"
fi

echo "âœ… DEVLOG.md updated successfully!"
