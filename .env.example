# Required: Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Required: OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Required: Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_VECTORIZE_INDEX=flrts-vectors
CLOUDFLARE_KV_NAMESPACE_ID=your_kv_namespace_id_here

# Toggle between Cloudflare and Upstash (for migration period)
USE_CLOUDFLARE_VECTORIZE=true
USE_CLOUDFLARE_CACHE=true

# Legacy: Upstash Configuration (to be removed after migration)
# UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
# UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here
# UPSTASH_VECTOR_REST_URL=your_upstash_vector_url_here
# UPSTASH_VECTOR_REST_TOKEN=your_upstash_vector_token_here

# Optional: Vector Database Configuration
VECTOR_NAMESPACE=your_namespace_here
VECTOR_TOP_K=5
MIGRATION_FOLDER=your_folder_here

# Optional: Application Configuration
# NOTES_FOLDER=notes
# INDEX_FILE=index.md
# README_FILE=README.md

# Optional: GPT Model Configuration
# GPT_MODEL=gpt-4o
# MAX_TOKENS=2000
# TEMPERATURE=0.7

# Optional: Custom System Prompt (use quotes for multiline)
# SYSTEM_PROMPT="You are a markdown-based memory assistant..."

# Required: Authorization Configuration
# JSON arrays of authorized usernames and user IDs
AUTHORIZED_USERNAMES='["Colin_10NetZero"]'
AUTHORIZED_USER_IDS='[your_telegram_user_id]'

# Database Connection Pool Settings
SUPABASE_POOL_SIZE=10
SUPABASE_MAX_OVERFLOW=5
SUPABASE_POOL_TIMEOUT=30
SUPABASE_POOL_RECYCLE=3600

# Redis Connection Pool Settings
REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=30
REDIS_MAX_CONNECTIONS=20

# Vector Store Settings
VECTOR_CACHE_TTL=300
VECTOR_CACHE_ENABLED=true
VECTOR_TOP_K=5

# Optional: Graph Memory Configuration (for knowledge graph features)
# Requires Neo4j to be running locally or accessible
# NEO4J_URL=bolt://localhost:7687
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=your_neo4j_password_here

# Optional: mem0 Advanced Configuration
# MEM0_LLM_MODEL=gpt-4o-mini
# MEM0_MEMORY_THRESHOLD=0.7
# MEM0_WEBHOOK_URL=https://your-webhook-endpoint.com/mem0
# MEM0_WEBHOOK_TOKEN=your-webhook-secret

# Optional: Pre-seed memories (JSON array)
# MEM0_INITIAL_MEMORIES='[{"user_id": "system", "content": "Company uses Eagle Lake pumps", "category": "equipment"}]'

# Optional: User-specific memory settings
# MEM0_USER_COLIN_RETENTION_DAYS=90
# MEM0_USER_COLIN_CATEGORIES=preference,equipment,location
# MEM0_USER_COLIN_AUTO_EXTRACT=true
